{
    "swagger": "2.0",
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "Enter your bearer token in the format **Bearer <token>**"
      }
    },
    "security": [{ "Bearer": [] }],
  
    "info": {
      "title": "Contact App APIs Documentation",
      "description": "This is documentation for country app APIs, how they can be used there outputs once used and more",
      "version": "1.0.0"
    },
    "host": "localhost:3000",
    "basepath": "",
  
    "$schema": {
      "user": {
        "type": "object",
        "properties": {
          "fistName": {
            "type": "string",
            "description": "first name of the user"
          },
          "lastName": {
            "type": "string",
            "description": "last name of the user"
          },
          "email": {
            "type": "string",
            "description": "email of the user"
          },
          "password": {
            "type": "string",
            "description": "password of the user"
          }
        }
      },
  
      "contact": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "description": "Full name of the user"
          },
          "email": {
            "type": "string",
            "format": "Email of the user"
          },
          "phone": {
            "type": "string",
            "description": "Phone number of the user"
          }
        }
      },
      "Comment": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "comment to be added on the blog"
          }
        }
      }
    }, 
    "tags": [
      {
        "name": "user",
        "description": "user operations"
      },
      {
        "name": "contact",
        "description": "Details of the contact"
      }
    ],
    "schemes": ["http", "https"],
    "paths": {
          "/api/v1/contactapp/auth/signup": {
            "post": {
              "summary": "User SignUp",
              "description": "Registering the user",
              "tags": ["user"],
              "parameters": [
                {
                  "in": "formData",
                  "name": "firstName",
                  "type": "string",
                  "required": true,
                  "description": "user's first name"
                },
                {
                  "in": "formData",
                  "name": "lastName",
                  "type": "string",
                  "required": true,
                  "description": "user's last name"
                },
                {
                  "in": "formData",
                  "name": "email",
                  "type": "string",
                  "required": true,
                  "description": "user's email"
                },
                {
                  "in": "formData",
                  "name": "password",
                  "type": "string",
                  "required": true,
                  "description": "user's last password"
                }
              ],
              "responses": {
                "200": {
                  "description": "Signed Up successfully !"
                },
                "401": {
                  "description": "SignUp has failed"
                }
              }
            }
          },
          "/api/v1/contactapp/auth/signin": {
            "post": {
              "summary": "User Sign In",
              "description": "Authenticate user and generate access token",
              "tags": ["user"],
              "parameters": [
                {
                  "in": "formData",
                  "name": "email",
                  "type": "string",
                  "required": true,
                  "description": "user's email"
                },
                {
                  "in": "formData",
                  "name": "password",
                  "type": "string",
                  "required": true,
                  "description": "user's last password"
                }
              ],
              "responses": {
                "200": {
                  "description": "Signed In successfully !"
                },
                "401": {
                  "description": "SignIn has failed"
                }
              }
            }
          },
          "/api/v1/contactapp/auth/list": {
            "get": {
              "summary": "Get the list of users",
              "description": "This endpoint is used to get all users in your database",
              "tags": ["user"],
              "responses": {
                "200": {
                  "Schema": {
                    "res": "#/component/schemas/userList"
                  },
                  "description": "Successful response"
                }
              }
            }
          },
          "/api/v1/contactapp/auth/findById": {
            "get": {
              "summary": "Get a single user by ID",
              "description": "This endpoint is used to get a single user by its ID",
              "tags": ["user"],
              "parameters": [
                {
                  "name": "usersId",
                  "in": "path",
                  "description": "ID of the user to retrieve",
                  "required": true,
                  "schema": {
                    "type": "string"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Successful response"
                },
                "404": {
                  "description": "User not found"
                }
              }
            }
          },
          "/api/v1/contactapp/auth/findByPhone": {
            "get": {
              "summary": "Get a single user by phone number",
              "description": "This endpoint is used to get a single user by their phone number",
              "tags": ["user"],
              "parameters": [
                {
                  "name": "phoneNumber",
                  "in": "path",
                  "description": "Phone number of the user to retrieve",
                  "required": true,
                  "schema": {
                    "type": "string"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Successful response"
                },
                "404": {
                  "description": "User not found"
                }
              }
            }
          },
          "/api/v1/contactapp/auth/delete": {
            "delete": {
              "summary": "Delete a user by ID",
              "description": "This endpoint is used to delete a user by his/her ID",
              "tags": ["user"],
              "security": [
                {
                  "Bearer": []
                }
              ],
              "parameters": [
                {
                  "name": "user_id",
                  "in": "path",
                  "description": "ID of the user to delete",
                  "required": true,
                  "schema": {
                    "type": "string"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "User deleted"
                },
                "404": {
                  "description": "user not found"
                }
              }
            }
          },
          "/api/v1/contactapp/contact/add": {
            "post": {
              "summary": "Add a contact",
              "description": "Adding contact details",
              "tags": ["contact"],
              "parameters": [
                {
                  "in": "formData",
                  "name": "fullName",
                  "type": "string",
                  "required": true,
                  "description": "contact's owner full names"
                },
                {
                  "in": "formData",
                  "name": "email",
                  "type": "string",
                  "required": true,
                  "description": "contact owner's email"
                },
                {
                  "in": "formData",
                  "name": "Phone",
                  "type": "string",
                  "required": true,
                  "description": "contact owner's phone number"
                }
              ],
              "responses": {
                "200": {
                  "description": "contact saved successfully !"
                },
                "401": {
                  "description": "Conatct has failed to be saved"
                }
              }
            }
          },
          "/api/v1/contactapp/contact/list": {
            "get": {
              "summary": "Get the list of contacts",
              "description": "This endpoint is used to get all contacts in your database",
              "tags": ["contact"],
              "responses": {
                "200": {
                  "Schema": {
                    "res": "#/component/schemas/contactList"
                  },
                  "description": "Successful response"
                }
              }
            }
          },
          "/api/v1/contactapp/contact/findById": {
            "get": {
              "summary": "Get a single contact by ID",
              "description": "This endpoint is used to get a single contact by its ID",
              "tags": ["contact"],
              "parameters": [
                {
                  "name": "contactId",
                  "in": "path",
                  "description": "ID of the contact to retrieve",
                  "required": true,
                  "schema": {
                    "type": "string"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Successful response"
                },
                "404": {
                  "description": "Contact not found"
                }
              }
            }
          },
          "/api/v1/contactapp/contact/findByPhone": {
            "get": {
              "summary": "Get a single contact by phone number",
              "description": "This endpoint is used to get a single contact by their phone number",
              "tags": ["contact"],
              "parameters": [
                {
                  "name": "phoneNumber",
                  "in": "path",
                  "description": "Phone number of the contact to retrieve",
                  "required": true,
                  "schema": {
                    "type": "string"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Successful response"
                },
                "404": {
                  "description": "Contact not found"
                }
              }
            }
          },
          "/api/v1/contactapp/contact/delete": {
            "delete": {
              "summary": "Delete a contact by ID",
              "description": "This endpoint is used to delete a contact by his/her ID",
              "tags": ["contact"],
              "security": [
                {
                  "Bearer": []
                }
              ],
              "parameters": [
                {
                  "name": "contact_id",
                  "in": "path",
                  "description": "ID of the contact to delete",
                  "required": true,
                  "schema": {
                    "type": "string"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Contact deleted"
                },
                "404": {
                  "description": "Contact not found"
                }
              }
            }
          }
      },      
    "components": {
      "securitySchemes": {
        "Bearer": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    },
    "definitions": {
      "User-Auth": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "required": true
          },
          "email": {
            "type": "string",
            "required": true
          },
          "password": {
            "type": "string",
            "required": true
          },
          "role": {
            "type": "string",
            "required": true
          }
        },
        "required": ["name", "email", "password", "role"]
      },
      "Items": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "required": false },
          "serial_number": { "type": "string", "required": false },
          "category": { "type": "string", "required": false },
          "date_of_entry": {
            "type": "string",
            "format": "date",
            "required": false
          },
          "brand": { "type": "string", "required": false },
          "weight": { "type": "string", "required": false },
          "warranty_expiration_date": {
            "type": "string",
            "format": "date",
            "required": false
          },
          "image": {
            "url": { "type": "string" }
          },
          "location": { "type": "string", "required": false },
          "status": { "type": "string", "required": false },
          "color": { "type": "string", "required": false },
          "disposal_date": {
            "type": "string",
            "format": "date",
            "required": false
          },
          "additional_specifications": { "type": "string", "required": false }
        },
        "required": [
          "name",
          "serial_number",
          "category",
          "date_of_entry",
          "brand",
          "weight",
          "warranty_expiration_date",
          "image",
          "location",
          "status",
          "color",
          "disposal_date",
          "additional_specifications"
        ]
      },
      "Payments": {
        "type": "object",
        "properties": {
          "finance_id": {
            "type": "string",
            "required": true
          },
          "request_id": {
            "type": "string",
            "required": true
          },
          "amount": {
            "type": "number",
            "required": true
          },
          "payment_date": {
            "type": "string",
            "format": "date",
            "required": false
          },
          "proof_of_payment": {
            "url": { "type": "string" }
          },
          "payment_method": { "type": "string", "required": false }
        },
        "required": [
          "finance_id",
          "request_id",
          "amount",
          "proof_of_payment",
          "payment_method"
        ]
      },
      "Approvals": {
        "type": "object",
        "properties": {
          "request_id": {
            "type": "string",
            "required": true
          },
          "approved_by": {
            "type": "string",
            "required": true
          },
          "approval_date": {
            "type": "string",
            "format": "date",
            "required": true
          },
          "status": {
            "type": "string",
            "required": true
          }
        },
        "required": ["request_id", "approved_by", "approval_date", "status"]
      },
      "Requests": {
        "type": "object",
        "properties": {
          "requestedBy": {
            "type": "string",
            "required": true
          },
          "itemDescription": {
            "type": "string",
            "required": true
          },
          "itemCategory": {
            "type": "string",
            "required": true
          },
          "quantity": {
            "type": "number",
            "required": true
          },
          "unitPrice": {
            "type": "number",
            "required": true
          },
          "totalPrice": {
            "type": "number",
            "required": true
          },
          "status": {
            "type": "string",
            "required": true
          },
          "requestDate": {
            "type": "string",
            "format": "date",
            "required": false
          },
          "approvedBy": {
            "type": "string",
            "required": true
          },
          "comments": {
            "type": "string",
            "required": true
          }
        },
        "required": [
          "requestedBy",
          "itemDescription",
          "itemCategory",
          "quantity",
          "unitPrice",
          "totalPrice",
          "status",
          "approvedBy",
          "comments"
        ]
      },
      "Finance": {
        "type": "object",
        "properties": {
          "requestId": {
            "type": "string",
            "required": true
          },
          "amount": {
            "type": "string",
            "required": true
          },
          "date": {
            "type": "string",
            "format": "date",
            "required": false
          },
          "comment": { "type": "string", "required": false }
        },
        "required": ["requestId", "amount"]
      },
      "LeaveRequests": {
        "type": "object",
        "properties": {
          "employeeId": {
            "type": "string",
            "required": false
          },
          "names": { "type": "string", "required": false },
          "category": {
            "type": "string",
            "enum": ["leave", "permission"],
            "required": false
          },
          "type": { "type": "string", "required": false },
          "startDate": { "type": "string", "format": "date", "required": false },
          "endDate": { "type": "string", "format": "date", "required": false },
          "date": { "type": "string", "format": "date", "required": false },
          "reason": { "type": "string", "required": false },
          "status": {
            "type": "string",
            "enum": ["pending", "approved", "denied"],
            "default": "pending",
            "required": false
          },
          "file_document": {
            "url": { "type": "string" }
          },
          "email": { "type": "string", "required": false, "unique": true },
          "createdAt": { "type": "string", "format": "date", "required": false }
        },
        "required": [
          "employeeId",
          "names",
          "category",
          "startDate",
          "endDate",
          "date",
          "reason",
          "status",
          "file_document",
          "email",
          "createdAt"
        ]
      }
    }
  }
  